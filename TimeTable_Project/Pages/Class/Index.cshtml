@page
@model TimeTable_Project.Pages.Class.IndexModel

@{
    ViewData["Title"] = "Index";
}
<style>
    /* Cải thiện đường viền của button */
    .btn {
        border-radius: 0.25rem;
    }

    /* Tăng khoảng cách giữa các hàng */
    .table tbody tr {
        margin-bottom: 0.5rem;
    }

</style>
<h1 class="mt-5 mb-4">Class List</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead class="bg-primary text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GrClass[0].Code)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GrClass)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-info btn-sm" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-secondary btn-sm" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
